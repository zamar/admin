#!/bin/bash

#--------------------------------------------------------------------------
# USAGE:
#   jk-git-add [github_username]
#
# DESCRIPTION:
#   Adds 
#--------------------------------------------------------------------------

#--------------------------------------------------------------------------
#       INIT
#--------------------------------------------------------------------------

set -e # Stop immediately if a command fails

#--------------------------------------------------------------------------
#       GLOBAL CONSTANTS
#--------------------------------------------------------------------------

MODULE_NAME=jk-git-add

#--------------------------------------------------------------------------
#       PRIVATE FUNCTIONS
#--------------------------------------------------------------------------

show_usage() {

    echo ""
    echo "$MODULE_NAME [github_user_name]"
    echo ""
    echo "github_username        Github username for Stockfish repo1"
    echo ""

    exit 1
}

die() {
    echo "$1" 1>&2
    exit 1
}

#--------------------------------------------------------------------------
#       MAIN CODE
#--------------------------------------------------------------------------

# STEP. Parse command line.

if [ -z $1 ] || [ $1 == "-?" ] || [ $1 == "-h" ] || [ $1 == "--help" ] ; then
    show_usage
fi

USER="$1"

git remote add $USER https://github.com/$USER/Stockfish.git || true
git fetch $USER --no-tags
