#--------------------------------------------------------------------------
#       LIBRARIES
#--------------------------------------------------------------------------
use strict;
use warnings;
use Getopt::Long;

autoflush STDOUT 1;
autoflush STDERR 1;

#--------------------------------------------------------------------------
#       GLOBAL CONSTANTS
#--------------------------------------------------------------------------
my $MODULE_NAME = 'FIXME';

#--------------------------------------------------------------------------
#       GLOBAL VARIABLES
#--------------------------------------------------------------------------
my $FIXME_VAR = 0;

#--------------------------------------------------------------------------
#       GETOPT VARIABLES
#--------------------------------------------------------------------------
use vars qw($opt_FIXME $opt_FIXME2);

#--------------------------------------------------------------------------
#       SUBROUTINES
#--------------------------------------------------------------------------

#**************************************************************************
# NAME:
#   show_usage
#
# DESCRIPTION:
#   Prints usage details
#
# PARAMETERS:
#   None
#
# RETURNS:
#   Never 
#**************************************************************************
sub show_usage
{
    print STDERR <<EOS;

$MODULE_NAME FIXME_PARAM
    param1                   FIXME_description

EOS
    exit(1)
}

#--------------------------------------------------------------------------
#       MAIN CODE
#--------------------------------------------------------------------------

show_usage if (!defined($ARGV[0]) || $ARGV[0] eq '-?' || $ARGV[0] eq '-h' || $ARGV[0] eq '--help');
show_usage if !GetOptions("opt_FIXME", "opt_FIXME2=s");

# FIXME CODE

exit 0;
